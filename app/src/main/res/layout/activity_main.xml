<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/font"
    android:gravity="center"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="18dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Bienvenue , voici nos differents champs pour creer votre compte"
        />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/creation"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/material_dynamic_neutral20"
        android:hint="veuillez cliquer ici pour aller creer"
        />
</LinearLayout>